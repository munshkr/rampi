#!/usr/bin/env ruby
require 'rampi'
require 'rampi/repl'
#require 'optparse'

=begin
options = {:name => nil, :age => nil}

parser = OptionParser.new do|opts|
  opts.banner = "Usage: rampi [options]"
  opts.on('-e', '--eval', 'Evaluate string') do |string|
    options[:eval] = string
  end

  opts.on('-f', '--file FILE', 'Evaluate file') do |path|
    options[:file] = path
  end

  opts.on('-h', '--help', 'Display this message') do
    puts opts
    exit
  end
end

parser.parse!

if options[:eval]
=end

#include Rampi

Rampi::REPL.start
